                    <resource id="MagoArab_HideMassActions::status_today_deliveries" title="Status: تسليمات اليوم" />
                    <resource id="MagoArab_HideMassActions::status_shipped_today" title="Status: تم الشحن اليوم" />
                    <resource id="MagoArab_HideMassActions::status_shipped" title="Status: تم الشحن" />
                    <resource id="MagoArab_HideMassActions::status_be3ly_deliveries" title="Status: Be3ly تسليمات" />
                    <resource id="MagoArab_HideMassActions::status_attempt_2" title="Status: محاولة 2" />
                    <resource id="MagoArab_HideMassActions::status_mohamed_confirmations" title="Status: تاكيدات محمد" />
