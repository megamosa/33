                    <resource id="MagoArab_HideMassActions::status_pre_be3ly_reservation" title="Status: مسبق Be3ly حجز" />
                    <resource id="MagoArab_HideMassActions::status_processing" title="Status: جاري التجهيز" />
                    <resource id="MagoArab_HideMassActions::status_printing" title="Status: طباعه" />
                    <resource id="MagoArab_HideMassActions::status_todays_returns" title="Status: مرتجعات اليوم" />

                    <!-- English Status Options -->
                    <resource id="MagoArab_HideMassActions::status_canceled" title="Status: Canceled" />
                    <resource id="MagoArab_HideMassActions::status_closed" title="Status: Closed" />
                    <resource id="MagoArab_HideMassActions::status_complete" title="Status: Complete" />
                    <resource id="MagoArab_HideMassActions::status_suspected_fraud" title="Status: Suspected Fraud" />
                    <resource id="MagoArab_HideMassActions::status_on_hold" title="Status: On Hold" />
                    <resource id="MagoArab_HideMassActions::status_payment_review" title="Status: Payment Review" />
                    <resource id="MagoArab_HideMassActions::status_pending" title="Status: Pending" />
                    <resource id="MagoArab_HideMassActions::status_pending_payment" title="Status: Pending Payment" />

                    <!-- Mass Actions -->
                    <resource id="MagoArab_HideMassActions::mass_actions" title="Mass Actions">
                        <resource id="MagoArab_HideMassActions::change_status" title="Change Order Status" />
                        <resource id="MagoArab_HideMassActions::print_pdf_orders" title="Print PDF Orders" />
                        <resource id="MagoArab_HideMassActions::print_invoices" title="Print Invoices" />
                        <resource id="MagoArab_HideMassActions::print_packing_slips" title="Print Packing Slips" />
                        <resource id="MagoArab_HideMassActions::print_credit_memos" title="Print Credit Memos" />
                        <resource id="MagoArab_HideMassActions::print_all" title="Print All" />
                        <resource id="MagoArab_HideMassActions::print_shipping_labels" title="Print Shipping Labels" />
                        <resource id="MagoArab_HideMassActions::cancel" title="Cancel Orders" />
                        <resource id="MagoArab_HideMassActions::hold" title="Hold Orders" />
                        <resource id="MagoArab_HideMassActions::unhold" title="Unhold Orders" />
